<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="MainTheme" parent="MainTheme.Base">
		<item name="android:windowBackground">@color/backgroundColor</item>
		<item name="android:textColor">@color/textColor</item>
		<item name="colorPrimary">@color/backgroundColor</item>
		<item name="colorPrimaryDark">@android:color/black</item>
		<item name="colorAccent">#787878</item>
		<item name="android:colorPressedHighlight">@color/ListViewHighlighted</item>
		<item name="android:colorLongPressedHighlight">@color/ListViewSelectedItem</item>
		<item name="android:colorFocusedHighlight">@color/ListViewSelectedItem</item>
		<item name="android:colorActivatedHighlight">@color/ListViewSelectedItem</item>
		<item name="android:activatedBackgroundIndicator">@color/ListViewSelectedItem</item>
		<item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
		<item name="android:editTextStyle">@style/CustomEditorStyle</item>
		<item name="tabStyle">@style/CustomTabLayout</item>
	</style>
	<!-- Editor Style -->
	<style name="CustomEditorStyle">
		<item name="android:backgroundTint">@android:color/transparent</item>
	</style>
	<!-- Date Picker Style -->
	<style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
		<!--header background-->
		<item name="colorAccent">#3d3d3d</item>
		<!--header textcolor-->
		<item name="android:textColorPrimaryInverse">#FFFFFF</item>
		<!--body background-->
		<item name="android:windowBackground">#3d3d3d</item>
		<!--selected day-->
		<item name="android:colorControlActivated">#000000</item>
		<!--days of the month-->
		<item name="android:textColorPrimary">#FFFFFF</item>
		<!--days of the week-->
		<item name="android:textColorSecondary">#FFFFFF</item>
		<!--cancel&ok-->
		<item name="android:textColor">#FFFFFF</item>
	</style>

	<!--Tab Layout Style-->
	<style name="CustomTabLayout" parent="Widget.Design.TabLayout">
		<item name="android:textSize">0sp</item>
		<item name="tabGravity">fill</item>
		<item name="tabMode">fixed</item>
		<item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
	</style>
	
	
	
</resources>