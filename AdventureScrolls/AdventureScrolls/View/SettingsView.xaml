<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdventureScrolls.View.SettingsView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding userName}" HorizontalOptions="Center" Margin="0,20,0,0" />
            <Button VerticalOptions="Center" Text="Login to google drive" Command="{Binding LoginGoogleDrive}"/>
            <Button VerticalOptions="Center" Text="Make Backup" Command="{Binding UploadScrollLibrary}"/>
            <Button VerticalOptions="Center" Text="Download Backup" Command="{Binding DownloadScrollLibrary}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>