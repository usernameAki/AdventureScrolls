<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdventureScrolls.View.SettingsView">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Style="{StaticResource MainLabelStyle}"
                Text="{Binding userName}" 
                HorizontalOptions="Center" 
                Margin="0,50,0,50" />
            <Button 
                Style="{StaticResource MainButtonStyle}" 
                WidthRequest="200"
                Margin="0,10,0,10"
                HorizontalOptions="Center"
                Text="Login to google drive" 
                Command="{Binding LoginGoogleDrive}"/>
            <Button 
                Style="{StaticResource MainButtonStyle}" 
                WidthRequest="200"
                Margin="0,10,0,10"
                HorizontalOptions="Center" 
                Text="Make Backup" 
                Command="{Binding UploadScrollLibrary}"/>
            <Button 
                Style="{StaticResource MainButtonStyle}" 
                WidthRequest="200"
                Margin="0,10,0,10"
                HorizontalOptions="Center"
                Text="Download Backup" 
                Command="{Binding DownloadScrollLibrary}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>