<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdventureScrolls.MainPage">

    <ContentPage.Resources>
        <Style x:Key="LabelToDo" TargetType="Label">
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </ContentPage.Resources>

    <StackLayout>
        <Label Text="To DO:" Style="{StaticResource LabelToDo}"/>
        <Label Text="Zrobić Model" Style="{StaticResource LabelToDo}"/>
        <Label Text="Zrobić ViewModel" Style="{StaticResource LabelToDo}"/>
        <Label Text="Zrobić View Wpisów" Style="{StaticResource LabelToDo}"/>
        <Label Text="Zrobić Nawigację" Style="{StaticResource LabelToDo}"/>
    </StackLayout>

</ContentPage>
